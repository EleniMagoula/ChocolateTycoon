@model IEnumerable<ChocolateTycoon.Models.Store>
@{
    ViewBag.Title = "Index";
}

<div class="container container-fluid">
    <div class="row">
        <h2>
            Stores
            <span type="button" class="btn btn-link btn-lg" style="padding-left: 15px">
                @Html.ActionLink(" ", "Create", null, new
            {
               @id = "create",
               @class = "glyphicon glyphicon-plus",
               @style = "text-decoration: none"
            })
            </span>
        </h2>
    </div>
</div>

<div class="container container-fluid">
    <div id="messageBox" class="row text-center">
        <div id="errorBox" class="row text-danger hidden" style="padding: 0; margin: 0 5px">
            <h3 class="glyphicon glyphicon-exclamation-sign"></h3>
            <span id="errorText" style="padding-left: 10px;">@ViewBag.ErrorMessage</span>
        </div>
        <div id="infoBox" class="row text-warning hidden">
            <h3 class="glyphicon glyphicon-info-sign"></h3>
            <span id="infoText" style="padding-left: 10px;">@ViewBag.MainStorageInfo</span>
        </div>
    </div>
</div>

<table id="stores" class="table">
    <thead>
        <tr style="background-color: darkslategray">
            <th>Store Name</th>
            <th>Level</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in Model)
        {
            string selected = "";

            if (store.ID == ViewBag.SelectedId)
            {
                selected = "dimgrey";
            }

            <tr style="background-color: @selected">
                <td>@store.Name</td>
                <td>@store.Level</td>
                <td style="text-align: right">
                    @Html.ActionLink(" ", null, new { id = store.ID }, new
                    { @class = "glyphicon glyphicon-option-horizontal", @style = "text-decoration: none" })
                </td>
                <td style="text-align: right">
                    @Html.ActionLink(" ", "Edit", new { id = store.ID }, new
                    {
                        @class = "glyphicon glyphicon-cog text-warning",
                        @style = "text-decoration: none"
                    })
                </td>
                <td style="text-align: right">
                    <a href="#" class="glyphicon glyphicon-remove text-danger js-delete-store"
                       style="text-decoration: none" data-store-id="@store.ID"></a>
                </td>
            </tr>
        }
    </tbody>
</table>


@if (ViewBag.SelectedId != null)
{
    <table class="table table-bordered text-center">
        <tr style="background-color: darkslategrey">
            <th colspan="3" style="text-align: center">Chocolates</th>
            <th colspan="3" style="text-align: center">Employees</th>
        </tr>

        @foreach (var store in Model)
        {
            if (ViewBag.SelectedId == store.ID)
            {
                {
                    Html.RenderAction("Details", new { id = store.ID });
                }
            }
        }
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {

            $(".js-delete-store").click(function (e) {
                var link = $(e.target);

                bootbox.dialog({
                    title: 'Confirm Deletion',
                    message: '<p>Are you sure you want to Delete this Store?</p>',
                    size: 'large',
                    onEscape: true,
                    backdrop: true,
                    buttons: {
                        no: {
                            label: 'Umm...maybe not',
                            className: 'btn-default',
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: 'Destroy it!',
                            className: 'btn-danger',
                            callback: function () {
                                $.ajax({
                                    url: "/api/stores/" + link.attr("data-store-id"),
                                    method: "DELETE"
                                })
                                    .done(function () {
                                        link.parents("tr").fadeOut(function () {
                                            $(this).remove();
                                            location.reload(true); // to reload page so as to update deposit on navbar
                                        });
                                    })
                                    .fail(function () {
                                        alert("Bad very bad");
                                    });
                            }
                        }
                    }
                });
            });

            let button = $('#create');

            $(button).on("click", function (e) {
                e.preventDefault();
                let self = this;
                bootbox.confirm({
                    closeButton: false,
                    size: 'small',
                    message: "<p class='text-warning'>Costs 1500 <i class='glyphicon glyphicon-bitcoin'></i></p> Proceed?",
                    callback: function (result) {
                        if (result)
                            window.location = self.href;
                    }
                });
            });

            let errorMessage = $("#errorText").text();
            let infoMessage = $("#infoText").text();

            if (errorMessage.length > 0) {
                $("#errorBox").toggleClass("hidden").hide().slideDown();
            };

            if (infoMessage.length > 0) {
                $("#infoBox").toggleClass("hidden").hide().slideDown();
            };
        });
    </script>
}
