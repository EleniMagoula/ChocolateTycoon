@model ChocolateTycoon.Core.ViewModels.StoresViewModel

@{
    ViewBag.Title = "Stores";
}

<div class="container container-fluid">
    <div class="row">
        <h1>Stores</h1>
        <br />
    </div>
</div>

@{
    <div class="container container-fluid">
        <div id="messageContainer" class="row text-center">
            <div id="errorContainer" class="row text-danger hidden" style="padding: 0; margin: 0 5px">
                <h3 class="glyphicon glyphicon-exclamation-sign"></h3>
                <span id="errorMessage" style="padding-left: 10px;">@Model.ErrorMessage</span>
            </div>
        </div>
    </div>
}

<table id="stores" class="table table-striped table-hover">
    <thead>
        <tr class="warning">
            <th>Store Name</th>
            <th>Level</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in Model.Stores)
        {
            //string selected = "";

            //if (store.ID == ViewBag.SelectedId)
            //{
            //    selected = "orange";
            //}

            <tr @*style="background-color: @selected"*@>
                <td>@store.Name</td>
                <td>@store.Level</td>
                <td style="text-align: right">
                    @Html.ActionLink(" ", null, new { id = store.ID }, new
                    { @class = "fas fa-bars", @style = "text-decoration: none" })
                </td>
                <td style="text-align: right">
                    @Html.ActionLink(" ", "Edit", new { id = store.ID }, new
                    {
                        @class = "fas fa-cog text-warning",
                        @style = "text-decoration: none"
                    })
                </td>
                <td style="text-align: right">
                    <a href="#" class="fas fa-trash-alt text-danger js-delete-store"
                       style="text-decoration: none" data-store-id="@store.ID"></a>
                </td>
            </tr>
        }
    </tbody>
</table>


@if (ViewBag.SelectedId != null)
{
<table class="table table-bordered text-center table-hover">
    <tr @*style="background-color: darkslategrey"*@>
        <th colspan="3" style="text-align: center">Chocolates</th>
        <th colspan="3" style="text-align: center">Employees</th>
    </tr>

    @foreach (var store in Model.Stores)
    {
        if (ViewBag.SelectedId == store.ID)
        {
            {
                Html.RenderAction("Details", new { id = store.ID });
            }
        }
    }
</table>
}


@Html.ActionLink("Create a new store!", "Create", null, new { @id = "createNewStoreButton", @class = "btn btn-warning btn-lg btn-block" })


@section scripts
{
    <script>
        $(document).ready(function () {



            $(".js-delete-store").click(function (e) {
                var link = $(e.target);

                bootbox.dialog({
                    title: 'Confirm Deletion',
                    message: '<p>Are you sure you want to Delete this Store?</p>',
                    size: 'large',
                    onEscape: true,
                    backdrop: true,
                    buttons: {
                        no: {
                            label: 'Umm...maybe not',
                            className: 'btn-default',
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: 'Destroy it!',
                            className: 'btn-danger',
                            callback: function () {
                                $.ajax({
                                    url: "/api/stores/" + link.attr("data-store-id"),
                                    method: "DELETE"
                                })
                                    .done(function () {
                                        link.parents("tr").fadeOut(function () {
                                            $(this).remove();
                                            location.reload(true); // to reload page so as to update deposit on navbar
                                        });
                                    })
                                    .fail(function () {
                                        bootbox.alert("Bad very bad.");
                                    });
                            }
                        }
                    }
                });
            });

            let button = $('#createNewStoreButton');

            $(button).on("click", function (e) {
                e.preventDefault();
                let self = this;
                bootbox.confirm({
                    closeButton: false,
                    size: 'small',
                    message: "<p class='text-warning'>Costs 1500 <i class='glyphicon glyphicon-bitcoin'></i></p> Proceed?",
                    callback: function (result) {
                        if (result)
                            window.location = self.href;
                    }
                });
            });

            let errorMessage = $("#errorMessage").text();

              if (errorMessage.length > 0) {
                $("#errorContainer").toggleClass("hidden").hide().slideDown();
            };

            storeActionObserver();

        });
    </script>
}
