@model IEnumerable<ChocolateTycoon.Models.Store>
@{
    ViewBag.Title = "Index";
}

<h2>Stores</h2>

<hr />
<button type="button" class="btn-link">
    @Html.ActionLink("Create New", "New")
</button>
<hr />

<table id="stores" class="table">
    <thead>
        <tr>
            <th>Store Name</th>
            <th>Level</th>
            <th>Current Chocolate Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in Model)
        {
            string selected = "";

            if (store.ID == ViewBag.SelectedId)
            {
                selected = "success";
            }

            <tr class=@selected>
                <td>@Html.ActionLink(store.Name, null, null, new { id = store.ID }, new { @style = "text-align: right" })</td>
                <td>@store.Level</td>
                <td>@store.Chocolates.Count()</td>
                <td>@Html.ActionLink("Edit", "Edit", "Store", new { id = store.ID }, null)</td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.SelectedId != null)
{
    foreach (var store in Model)
    {
        if (ViewBag.SelectedId == store.ID)
        {
            {
                Html.RenderAction("Details", new { id = store.ID });
            }
        }
    }
}
