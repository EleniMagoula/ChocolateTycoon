@model ChocolateTycoon.ViewModels.StoreFormViewModel
@{
    ViewBag.Title = "StoreForm";
}

<h2>@Model.Heading</h2>

@using (Html.BeginForm(Model.Action, "Store"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(v => v.Name)
        @Html.TextBoxFor(v => v.Name, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(v => v.ID)
    <button type="submit" class="btn btn-primary">Save</button>
}


