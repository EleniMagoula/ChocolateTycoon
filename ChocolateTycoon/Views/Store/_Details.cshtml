@model ChocolateTycoon.Models.Store

<br />

<div class="alert hidden" id="sellMessage">
    @if (!Model.AdequateStaff)
    {
        <p class="text-danger">Not enough employees.</p>
    }
    else if (!Model.AdequateChocolate)
    {
        <p class="text-danger">Not enough stock.</p>
    }
    else
    {
        <p class="text-success">Done!</p>
    }
</div>

<tr>
    <th style="text-align: center">Restock</th>
    <th style="text-align: center">Chocolate Stock</th>
    <th style="text-align: center">Sell</th>
    <th style="text-align: center">Total Employees</th>
    <th style="text-align: center">Managers</th>
    <th style="text-align: center">Sales Department</th>
</tr>

<tr>
    <td id="restock">
        @Html.ActionLink("Restock", "Restock", new { id = Model.ID },
       new { @class = "btn btn-link text-success", @style = "padding: 0"/*, @onclick = "dataReload();" */})
    </td>
    <td>@Model.Stock</td>
    <td id="sell">
        @Html.ActionLink("Sell Chocolates", "SellChocolates", new { id = Model.ID },
       new { @class = "btn btn-link text-success", @style = "padding: 0"/*, @onclick = "dataReload();"*/})
        @*<p class="text-danger">@ViewBag.SellingProcess</p>*@
    </td>
    @{
        Html.RenderAction("StoreEmployees", new { id = Model.ID });
    }
</tr>

