@model IEnumerable<ChocolateTycoon.Models.Factory>

@{
    ViewBag.Title = "Index";
}

<h2>Factories</h2>

<table class="table">

    <th>Name</th>
    <th>Level</th>
    <th>Production per Day</th>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Level)</td>
            <td>@Html.DisplayFor(modelItem => item.ProductionUnit.MaxProductionPerDay)</td>
            <td>@Html.ActionLink("Edit", "Edit", new {id = item.ID }, null)</td>
        </tr>
    }




</table>