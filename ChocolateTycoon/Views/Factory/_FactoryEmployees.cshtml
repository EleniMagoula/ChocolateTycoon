@model ChocolateTycoon.Core.ViewModels.FactoryViewModel


<td>
    @Model._managers

    @if (Model.Factory.Level == 1)
    {
        if (Model._managers < 1)
        {
            <span class="label label-danger">At least 1 needed!</span>
        }
    }
    else
    {
        if (Model._managers < 2)
        {
            <span class="label label-danger">At least 2 needed!</span>
        }
    }
</td>

<td>
    @Model._production

    @if (Model.Factory.Level == 1)
    {
        if (Model._production < 2)
        {
            <span class="label label-danger">At least 2 needed!</span>
        }
    }
    else
    {
        if (Model._production < 4)
        {
            <span class="label label-danger">At least 4 needed!</span>
        }
    }
</td>
