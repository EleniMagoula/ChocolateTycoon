@model IEnumerable<ChocolateTycoon.Models.Supplier>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container-fluid">
    @foreach (var supplier in Model)
    {
        <div class="container-fluid col-md-4">
            <table id="table-@supplier.Id" class="table table-bordered">
                <thead style="background-color: darkslategray;">
                    <tr>
                        <th class="text-center" colspan="2">Offer @supplier.Id</th>
                        <th style="display: none"></th>
                    </tr>
                </thead>
                <tbody style="text-wrap: none">
                </tbody>
                <tfoot>
                    <tr class="text-center">
                        <td colspan="2">
                            <a href="#" class="btn btn-sm btn-primary js-delete-factory" data-supplier-id="@supplier.Id">Break Contract</a>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            let tables = $(".table");

            for (var i = 0; i < tables.length; i++) {
                let table = "#" + tables[i].getAttribute("id");

                fetch("/api/suppliers/" + (i + 1)).then(function (response) {

                    return response.text();

                }).then(function (data) {

                    const supplier = JSON.parse(data);

                    function GetFactoryNames() {
                        var names = [];

                        $.each(supplier.factories, function (key, value) {
                            $.each(value, function (key, val) {
                                if (key == 'name') {

                                    names.push(" " + val);
                                };
                            })
                        });

                        names.sort((a, b) => a.localeCompare(b));

                        return names.length > 0 ? names : "None";
                    };

                    function GetSuppliedFactories() {
                        var factories = [];

                        var defaultValue = { text: "Select", value: 0 };
                        factories.push(defaultValue);

                        (supplier.factories).forEach(function (key, value) {

                            var factory = { text: key.name, value: key.id };
                            factories.push(factory);
                        });                     

                        return factories.length < 2 ? [{ text: "Nothing to show", value: 0 }] : factories;
                    };

                    function BreakContract(factoryId) {
                        var indexToDelete = supplier.factories.findIndex(f => f.id == factoryId);

                        supplier.factories.splice(indexToDelete, 1);
                        format(supplier.factories);

                        return supplier.factories;
                    }


                    $(table).DataTable({
                        bPaginate: false,
                        bInfo: false,
                        searching: false,
                        ordering: false,
                        columns: [
                            {},
                            {}
                        ]
                    })
                        .row.add([
                            "Supplier",
                            supplier.name
                        ])
                        .row.add([
                            "Offer Amount (Kg)",
                            supplier.offerAmount
                        ])
                        .row.add([
                            "Price per Kg",
                            supplier.pricePerKilo
                        ])
                        .row.add([
                            "Currently Serves",
                            GetFactoryNames()
                        ])
                        .draw();


                    $(table).on('click', '.js-delete-factory', function (e) {
                        let button = $(this);

                        bootbox.prompt({
                            title: "Select a Contract to Break",
                            inputType: 'select',
                            inputOptions: GetSuppliedFactories(),
                            value: 0,
                            callback: function (factoryId) {

                                if (factoryId == 0)
                                    return;

                                var factoryIndex = BreakContract(factoryId);                              
                                console.log(factoryIndex);
                                //console.log(supplier);
                            }
                        });

                    });











                });
            };





        });
    </script>
}