@model IEnumerable<ChocolateTycoon.Models.Supplier>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container-fluid">
    @foreach (var supplier in Model)
    {
        <div class="container-fluid col-md-4">
            <table id="table-@supplier.Id" class="table table-bordered">
                <thead style="background-color: darkslategray;">
                    <tr>
                        <th class="text-center" colspan="2">Offer @supplier.Id</th>
                        <th style="display: none"></th>
                    </tr>
                </thead>
                <tbody style="text-wrap: none">
                </tbody>
                <tfoot>
                    <tr class="text-center">
                        <td colspan="2">
                            <a href="#" class="btn btn-sm btn-primary js-contract" data-supplier-id="@supplier.Id">Make Contract</a>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            let tables = $(".table");

            for (var i = 0; i < tables.length; i++) {
                let table = "#" + tables[i].getAttribute("id");

                fetch("/api/suppliers/" + (i + 1)).then(function (response) {

                    return response.text();

                }).then(function (data) {

                    const supplier = JSON.parse(data);

                    function GetNames() {
                        var names = [];

                        $.each(supplier.factories, function (key, value) {
                            $.each(value, function (key, val) {
                                if (key == 'name') {

                                    names.push(" " + val);
                                };
                            })
                        });

                        names.sort((a, b) => a.localeCompare(b));

                        return names;
                    }

                    var objects = [];

                    Object.keys(supplier.factories).forEach(function (key) {

                        objects.push(supplier.factories[key]);
                    });



                    if (objects.length == 0)
                        console.log("nothing to show");
                    else
                        objects.forEach(o => console.log(o.name));


                    $(table).DataTable({
                        bPaginate: false,
                        bInfo: false,
                        searching: false,
                        ordering: false,
                        columns: [
                            {},
                            {}
                        ]
                    })
                        .row.add([
                            "Supplier",
                            supplier.name
                        ])
                        .row.add([
                            "Offer Amount (Kg)",
                            supplier.offerAmount
                        ])
                        .row.add([
                            "Price per Kg",
                            supplier.pricePerKilo
                        ])
                        .row.add([
                            "Currently Serves",
                            GetNames()
                        ])
                        .draw();


                    $(table).on('click', '.js-contract', function (e) {
                        let button = $(this);

                        //console.log(button.attr('data-supplier-id'));



                        bootbox.prompt({
                            title: "Select a Factory",
                            inputType: 'select',
                            inputOptions: [
                                objects.forEach(o => { text: (o.name), value: 1 })
                                
                            ],
                            callback: function (result) {
                                console.log(result);
                            }
                        });

                    });











                });
            };





        });
    </script>
}