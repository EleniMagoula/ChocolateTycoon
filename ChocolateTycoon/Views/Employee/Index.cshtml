@model ICollection<ChocolateTycoon.Models.Employee>


@{
    ViewBag.Title = "Index";
}

<h2>Employees</h2>
<hr />
<button type="button" class="btn-link btn-lg" style="padding: 0 20px">
    @Html.ActionLink(" ", "Create", null, new
    {
        @class = "glyphicon glyphicon-plus",
        @style = "text-decoration: none"
    })
</button>
<hr />

<table class="table table-hover">

    <tr style="background-color: darkslategray">
        <th>FullName</th>
        <th>Position</th>
        <th>Salary</th>
        <th>Working place</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>

            @using ChocolateTycoon.Helpers
            <td>@item.Position.GetDisplayName()</td>

            <td>@item.Salary</td>

            <td>
                @if (item.FactoryID != null)
                {
                    @Html.DisplayFor(modelItem => item.Factory.Name)<text> Factory</text>
                }
                else if (item.StoreID != null)
                {
                    @Html.DisplayFor(modelItem => item.Store.Name)<text> Store</text>
                }
                else
                {
                    <span class="text-danger">Unasigned</span>
                }
            </td>

            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new
           {
               @class = "glyphicon glyphicon-edit text-warning",
               @style = "text-decoration: none"
           })
            </td>

            <td>
                @using (Html.BeginForm("Delete", "Employee",
                    new { id = item.Id },
                    FormMethod.Post,
                    new { @class = "del-form" }))
                {
                    @Html.AntiForgeryToken()

                    <button id="btn" class="btn btn-link" type="submit" style="padding: 0;">
                        <i class="glyphicon glyphicon-remove text-danger"></i>
                    </button>
                }
            </td>
        </tr>
    }
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            $(".del-form").on("click", "#btn", function (e) {
                var button = this;
                e.preventDefault();

                bootbox.confirm({
                    size: "small",
                    closeButton: false,
                    message: "Send this employee to" + "<br/>" + "unemployment office?",
                    buttons: {
                        confirm: {
                            label: 'Sack them!',
                            className: 'btn-danger pull-left'
                        },
                        cancel: {
                            label: 'Spare them!',
                            className: 'btn-success pull-right'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            button.form.submit();
                        };
                    }
                });
            });
        });
    </script>
}

