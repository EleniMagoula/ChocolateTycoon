@model ICollection<ChocolateTycoon.Models.Employee>


@{
    ViewBag.Title = "Index";
}

<h2>Employees</h2>
<hr />
<button type="button" class="btn-link">@Html.ActionLink("Create", "Create")</button>
<hr />

<table class="table table-hover">

    <tr style="background-color: darkslategray">
        <th>FullName</th>
        <th>Position</th>
        <th>Salary</th>
        <th>Working place</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>

            @using ChocolateTycoon.Helpers
            <td>@item.Position.GetDisplayName()</td>

            <td>@item.Salary</td>

            <td>
                @if (item.FactoryID != null)
                {
                    @Html.DisplayFor(modelItem => item.Factory.Name)<text> Factory</text>
                }
                else if (item.StoreID != null)
                {
                    @Html.DisplayFor(modelItem => item.Store.Name)<text> Store</text>
                }
                else
                {
                    <span class="text-danger">Unasigned</span>
                }
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id },
           new { @class = "btn btn-link text-warning", @style = "padding: 0" })
            </td>

            <td>
                @using (Html.BeginForm("Delete", "Employee", new { id = item.Id }, FormMethod.Post, new {@class = "del-form" }))
                {
                    @Html.AntiForgeryToken()

                    <button data-employee-id=@item.Id class="btn btn-link js-delete" type="submit" style="padding: 0; color: #e74c3c;">
                        Delete
                    </button>
                }
            </td>
        </tr>
    }
</table>

@section scripts
{
    <script>


        $(document).ready(function () {

            $(".js-delete").on("click", "data-employee-id", function () {

                var button = $(this);
                //var form = $(".del-form");
                button.preventDefault();

                bootbox.confirm({
                    message: "Send this employee to" + "<br/>" + "unemployment office?",
                    callback: function (result) {
                        if (result) {
                            button.closest('from').submit();
                        };
                    },
                    size: "small"
                });

                //alert("The data-id of clicked item is: " + button);

            });

        });



    </script>
}

